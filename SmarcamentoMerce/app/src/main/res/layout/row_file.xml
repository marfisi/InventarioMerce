<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/nomeFile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="nomefile"
        android:padding="2dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="- progres:"
        android:padding="2dp"/>

    <TextView
        android:id="@+id/progressivo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="progressivo"
        android:padding="2dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="- articoli:"
        android:padding="2dp"/>

    <TextView
        android:id="@+id/numeroArticoli"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="numarticoli"
        android:padding="2dp"/>


</LinearLayout>
