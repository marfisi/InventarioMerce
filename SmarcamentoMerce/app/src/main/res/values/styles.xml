<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="listaFont">
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="codart">
        <item name="android:textColor">#1b22f9</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="qty">
        <item name="android:textColor">@color/qtyTextColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="um_qty" parent="listaFont">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="difet_qty" parent="listaFont">

    </style>

    <style name="yes">
        <item name="android:background">@drawable/y</item>
    </style>

    <style name="no">
        <item name="android:background">@drawable/n</item>
    </style>

    <style name="piu">
        <item name="android:background">@drawable/piu</item>
    </style>

    <style name="meno">
        <item name="android:background">@drawable/meno</item>
    </style>

    <style name="modif">
        <item name="android:background">@drawable/modif</item>
    </style>

    <style name="check">
        <item name="android:background">@drawable/check</item>
    </style>

    <style name="warn">
        <item name="android:background">@drawable/warn</item>
    </style>

    <style name="reset">
        <item name="android:background">@drawable/reset</item>
    </style>

    <style name="qtyGrigliaTestata">
        <item name="android:textColor">#0004ff</item>
        <item name="android:background">#9efff5</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="qtyGrigliaValAtteso">
        <item name="android:textColor">#008cff</item>
        <item name="android:background">#8de9df</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="qtyGrigliaValRilevato">
        <item name="android:textColor">#d500ff</item>
        <item name="android:background">#9ebbff</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="accettazioneOK">
        <item name="android:background">#a6ff9e</item>
    </style>

    <style name="accettazioneSquadra">
        <item name="android:background">#f2c086</item>
    </style>

    <style name="keyboard">
        <item name="android:background">@drawable/keyboard</item>
    </style>

    <style name="keypad">
        <item name="android:background">@drawable/keypad</item>
    </style>

</resources>
