<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="styleTxDefault">
        <item name="android:textColor">@color/colTxDefault</item>
    </style>

    <style name="styleTxQtyAttese">
        <item name="android:textColor">@color/colTxQtyAttese</item>
        <item name="android:textSize">@dimen/dimTxQtyAttese</item>
    </style>

    <style name="styleTxQtyAtteseInModifica" parent="styleTxQtyAttese">
        <item name="android:textSize">@dimen/dimTxQtyAtteseInModifica</item>
    </style>

    <style name="styleQtyAtteseSelezionabile" parent="styleTxQtyAtteseInModifica">
        <item name="android:background">@drawable/drawable_qty_selezionabile</item>
    </style>

    <style name="styleQtyAtteseSelezionato" parent="styleTxQtyAtteseInModifica">
        <item name="android:background">@drawable/drawable_qty_selezionato</item>
    </style>

    <style name="styleTxQtyRilevate">
        <item name="android:textColor">@color/colTxQtyRilevate</item>
        <item name="android:textSize">@dimen/dimTxQtyRilevate</item>
    </style>

    <style name="styleTxArtCodice">
        <item name="android:textColor">@color/colTxArtCodice</item>
        <item name="android:textStyle">bold|italic</item>
    </style>

    <style name="styleTxArtDescrizione">
        <item name="android:textColor">@color/colTxArtDescrizione</item>
    </style>

    <style name="styleTxArtPrezzo">
        <item name="android:textColor">@color/colTxArtPrezzo</item>
    </style>

    <style name="styleBckgInventarioOK">
        <item name="android:background">@color/colBckgInventarioOK</item>
    </style>

    <style name="styleBckgInventarioDiffer">
        <item name="android:background">@color/colBckgInventarioDiffer</item>
    </style>


    <style name="styleYes">
        <item name="android:background">@drawable/y</item>
    </style>

    <style name="styleNo">
        <item name="android:background">@drawable/n</item>
    </style>

    <style name="stylePiu">
        <item name="android:background">@drawable/piu</item>
        <item name="android:layout_width">@dimen/dimBtnPiu</item>
        <item name="android:layout_height">@dimen/dimBtnPiu</item>
    </style>

    <style name="styleMeno">
        <item name="android:background">@drawable/meno</item>
        <item name="android:layout_width">@dimen/dimBtnMeno</item>
        <item name="android:layout_height">@dimen/dimBtnMeno</item>
    </style>

    <style name="styleModifica">
        <item name="android:background">@drawable/modif</item>
        <item name="android:layout_width">@dimen/dimBtnModif</item>
        <item name="android:layout_height">@dimen/dimBtnModif</item>
    </style>

    <style name="styleCheck">
        <item name="android:background">@drawable/check</item>
        <item name="android:layout_width">@dimen/dimImgFeed</item>
        <item name="android:layout_height">@dimen/dimImgFeed</item>
    </style>

    <style name="styleWarning">
        <item name="android:background">@drawable/warn</item>
        <item name="android:layout_width">@dimen/dimImgFeed</item>
        <item name="android:layout_height">@dimen/dimImgFeed</item>
    </style>

    <style name="styleReset">
        <item name="android:background">@drawable/reset</item>
        <item name="android:layout_width">@dimen/dimImgFeed</item>
        <item name="android:layout_height">@dimen/dimImgFeed</item>
    </style>

    <style name="styleLente">
        <item name="android:background">@drawable/lente</item>
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">70dp</item>
    </style>

    <style name="styleKeyboard">
        <item name="android:background">@drawable/keyboard</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="styleKeypad">
        <item name="android:background">@drawable/keypad</item>
    </style>

    <style name="styleVociQty">
        <item name="android:textColor">@color/colTxVociQty</item>
        <item name="android:background">@color/colBckgVociQty</item>
        <item name="android:layout_marginTop">@dimen/dimQtyMargineTop</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="styleSeparatoreVociQty">
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@android:color/darker_gray</item>
    </style>


</resources>
